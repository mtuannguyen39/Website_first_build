<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/css/admin_page.css">

</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">AdminPage</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="#">
                    <i class="bx bxs-dashboard"></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/News/Index">
                    <i class="bx bxs-shopping-bag-alt"></i>
                    <span class="text">Quản lý tin tức</span>
                </a>
            </li>
            <li>
                <a href="/NewsImages/Index">
                    <i class="bx bxs-doughnut-chart"></i>
                    <span class="text">Quản lý hình ảnh</span>
                </a>
            </li>
            <li>
                <a href="/Categories/Index">
                    <i class="bx bxs-message-dots"></i>
                    <span class="text">Quản lý danh mục</span>
                </a>
            </li>
            <li>
                <a href="/MinistryYears/Index">
                    <i class="bx bxs-group"></i>
                    <span class="text">Quản lý năm phụng vụ</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class="bx bxs-cog"></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="/Admins/LogOutUserAd" class="logout">
                    <i class='bx bx-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class="bx bx-menu"></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="profile">
                <img src="~/Content/img/people.png" alt="#">
            </a>
        </nav>


    </section>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="~/Content/javascript/admin_page.js"></script>
    <div>
        @RenderBody()
    </div>
</body>
</html>
