@model Website_first_build.Models.NewsImage

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm(new { method = "post", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
